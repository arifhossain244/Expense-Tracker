<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <link href="~/libs/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/libs/bootstrap/js/bootstrap.js"></script>
    <style>
        body {
            padding-top: 58px;
            background: url("/images/photodune-3580063-wooden-surface-s.jpg");
            background-size: cover;
            background-attachment: fixed;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        #footer {
            background-color: rgba(6, 114, 101, .2);
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            color:yellow;
            padding: 20px;
            font-size:larger;
        }

        .nav-link {
            padding: 10px;
        }

            .nav-link:hover {
                background-color: rgba(250, 250, 250, .5);
                color: white;
            }
    </style>
    @await RenderSectionAsync("styles", false)
</head>
<body>
    <nav class="navbar navbar-light navbar-expand-md fixed-top border-bottom" style="background-color: rgba(144, 164, 174, .5) ">
        <div class="container-fluid">
            <span class="navbar-brand" style="color: white">Expense Tracker</span>
            <div class="navbar-collapse collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Categories" asp-action="Index">Categories</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Expenses" asp-action="Index">Expenses</a>
                    </li>
                </ul>
            </div>
            <form class="d-flex">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-info my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </nav>
    <div class="container-fluid " style="min-height:calc(100vh - 115px)">
        @RenderBody()
    </div>
    <footer class="container-fluid border-top border-3 text-center"
            id="footer" style="height:57px">
        &copy;@DateTime.Now.Year - MVC5 Application
        &diams;&diams;&diams;Md Arif Hossain&diams;&diams;&diams;
        arifhossaineng244@gmail.com
    </footer>
    @await RenderSectionAsync("scripts", false)
</body>
</html>
