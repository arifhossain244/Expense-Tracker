@model ExpenseCategory
@{
    ViewData["Title"] = "Edit";
}

<style>
    #Box {
        margin-left: 180px;
        margin-right: 270px;
        background-color: rgba(0, 0, 0, .2);
        box-shadow: 0 4px 8px 0 rgb(10 52 47 / 0.2), 0 6px 20px 0 rgba(6, 114, 101, .2);
        padding: 10px;
    }
</style>
<div class="row" id="Box">
    <div class="col-12">
        <h3>Edit Category</h3>
        <div id="placeholder"></div>
        <form method="post" asp-action="Edit" asp-controller="Categories" asp-route-ExpenseCategoryId="@Model.ExpenseCategoryId"
              id="fCategories"
              data-ajax="true"
              data-ajax-method="POST"
              data-ajax-mode="replace"
              data-ajax-update="#placeholder"
              data-ajax-success="onSuccess">
            <div class="form-group row mb-2">
                <label asp-for="CategoryName" class="col-form-label col-form-label-sm col-2"></label>
                <div class="col-5">
                    <input type="text" asp-for="CategoryName" class="form-control form-control-sm" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-2">

                <div class="col-10 offset-2">
                    <button type="submit" class="btn btn-outline-primary">Submit</button>
                </div>
            </div>
        </form>
    </div>
    <div class=" col-12">
        <button type="submit" class="btn btn-outline-light">
            &lt;&lt;&lt;@Html.ActionLink("Back To List", "Index")
        </button>
    </div>
</div>
@section scripts{
    <script src="~/libs/jquery/jquery.js"></script>
    <script src="~/libs/validate/jquery.validate.js"></script>
    <script src="~/libs/validate/jquery.validate.unobtrusive.js"></script>
    <script src="~/libs/ajax/jquery.unobtrusive-ajax.js"></script>
    <script>
        function onSuccess() {
            $("#fCategories").trigger('reset');
        }
    </script>
}